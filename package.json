{
  "name": "test-web",
  "private": true,
  "scripts": {
    "start": "lerna run dev --parallel",
    "gateway:dev": "yarn workspace @backend/gateway dev",
    "kek:dev": "yarn workspace @frontend/dashboard dev",
    "typecheck": "lerna run typecheck",
    "lint": "tslint --project tsconfig.json -c tslint.json -t codeFrame backend/**/*.ts"
  },
  "devDependencies": {
    "lerna": "3.15.0",
    "tslint": "^5.17.0",
    "husky": "^2.4.1",
    "@babel/core": "^7.4.5",
    "core-js": "^2.6.5"
  },
  "workspaces": {
    "packages": [
      "frontend/*",
      "frontend/ui/*",
      "frontend/utils/*",
      "backend/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint && yarn typecheck"
    }
  }
}
